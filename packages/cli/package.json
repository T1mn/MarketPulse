{
  "name": "@marketpulse/cli",
  "version": "2.0.0-alpha.0",
  "type": "module",
  "bin": {
    "marketpulse": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "bun build ./src/cli.ts --outdir ./dist --target bun --external playwright --external playwright-core --external electron",
    "dev": "bun run --watch src/cli.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@marketpulse/core": "workspace:*",
    "@marketpulse/server": "workspace:*",
    "@marketpulse/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
