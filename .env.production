# MarketPulse Production Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# LLM Configuration (at least one required)
# =============================================================================

# vLLM self-hosted model (via FRP tunnel)
OPENAI_BASE_URL=http://124.220.94.170:1995
OPENAI_MODEL_NAME=qwen3-8b
OPENAI_API_KEY=any-value

# DeepSeek API (optional)
DEEPSEEK_API_KEY=

# Ollama for RAG embedding (optional, if running locally)
OLLAMA_BASE_URL=

# =============================================================================
# External Services
# =============================================================================

# Finnhub API for financial news (optional)
FINNHUB_API_KEY=

# =============================================================================
# Twitter Scraper Configuration
# =============================================================================

# Twitter auth token (required for scraping)
# Get from browser: Developer Tools -> Application -> Cookies -> auth_token
TWITTER_AUTH_TOKEN=

# Search queries (comma-separated, supports Twitter search syntax)
TWITTER_SEARCH_QUERIES=BTC,ETH,crypto,from:elonmusk,from:realDonaldTrump,from:saylor

# Scrape interval in minutes (default: 30)
TWITTER_SCRAPE_INTERVAL=30

# Max tweets per query (default: 100)
TWITTER_MAX_TWEETS_PER_QUERY=100

# Scrape on startup (default: false)
TWITTER_SCRAPE_ON_STARTUP=false

# =============================================================================
# Server Configuration
# =============================================================================

# Server port (default: 3000)
PORT=3000

# Server host (use 0.0.0.0 for Docker)
HOST=0.0.0.0

# =============================================================================
# ChromaDB Configuration (set automatically in docker-compose)
# =============================================================================

# ChromaDB host (default: http://localhost:8000)
# In Docker: http://chromadb:8000
# CHROMA_HOST=http://chromadb:8000
